# Maintainer: Aleksey Zhidkov <aleksey dot zhidkov at gmail dot com>
pkgname=jeb-k
pkgver=16.3
pkgrel=1
pkgdesc="Simple incremental backup tool with exponentially increasing backup intervals"
arch=('any')
url="https://github.com/aleksey-zhidkov/${pkgname}"
license=('Apache')
depends=('java-runtime=8' 'rsync')
makedepends=('wget')
source=(
        "${pkgname}-${pkgver}.tar"
#        "https://github.com/aleksey-zhidkov/${pkgname}/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar"
        "jeb-k")
md5sums=(
         'ad5ffef5763306da2865b958707094aa'
#//         '82a5c14107c3f80c4b729ff8da22f811'
         'ccfe913ba2de9f6d870e012e09b97ca9')

package() {
	cd "$srcdir"
	mkdir -p "${pkgdir}/usr/share/java/${pkgname}"
	mkdir -p "${pkgdir}/usr/bin"
	cp "${srcdir}/${pkgname}-${pkgver}/lib/"* "${pkgdir}/usr/share/java/${pkgname}"
	cp "../${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
